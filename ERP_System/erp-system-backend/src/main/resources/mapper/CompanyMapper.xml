<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.changing.erpsystembackend.mapper.CompanyMapper">
    <!-- Insert -->
    <insert id="insertCompany" parameterType="com.changing.erpsystembackend.entity.Company">
        INSERT INTO "Company" (NAME, TEL)
        VALUES (#{name}, #{tel})
    </insert>

    <!-- Select -->
    <select id="findCompanyIdByName" parameterType="java.lang.String" resultType="java.lang.Long">
        SELECT ID
        FROM "Company"
        WHERE NAME = #{name}
    </select>
</mapper>