<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.changing.erpsystembackend.mapper.EmployeeMapper">

    <insert id="createEmployee" parameterType="com.changing.erpsystembackend.entity.Employee">
        INSERT INTO EMPLOYEES (EMPLOYEEID, PASSWORD, DEPARTMENT, POSITION, STARTDATE, NAME, TEL, EMAIL, GENDER, BIRTHDAY, BIRTHPLACE, NATIONALITY, IDCARDNUMBER, POLITICALSTATUS, CV)
        VALUES (#{employeeId}, #{password}, #{department}, #{position}, #{startDate}, #{name}, #{tel}, #{email}, #{gender}, #{birthday}, #{birthplace}, #{nationality}, #{idCardNumber}, #{politicalStatus}, #{cv})
    </insert>

    <select id="findEmployeeById" resultType="com.changing.erpsystembackend.entity.Employee">
        SELECT * FROM EMPLOYEES
        WHERE EMPLOYEEID = #{employeeId}
    </select>

    <select id="findEmployeeByName" resultType="com.changing.erpsystembackend.entity.Employee">
        SELECT * FROM EMPLOYEES
        WHERE NAME = #{name}
    </select>

    <select id="findEmployeeByDepartment" resultType="com.changing.erpsystembackend.entity.Employee">
        SELECT * FROM EMPLOYEES
        WHERE DEPARTMENT = #{department}
    </select>

    <select id="findEmployeeByPosition" resultType="com.changing.erpsystembackend.entity.Employee">
        SELECT * FROM EMPLOYEES
        WHERE POSITION = #{position}
    </select>

    <select id="findEmployeeByTel" resultType="com.changing.erpsystembackend.entity.Employee">
        SELECT * FROM EMPLOYEES
        WHERE TEL = #{tel}
    </select>

    <select id="findEmployeeByGender" resultType="com.changing.erpsystembackend.entity.Employee">
        SELECT * FROM EMPLOYEES
        WHERE GENDER = #{gender}
    </select>

    <select id="findEmployeeByPoliticalStatus" resultType="com.changing.erpsystembackend.entity.Employee">
        SELECT * FROM EMPLOYEES
        WHERE POLITICALSTATUS = #{politicalStatus}
    </select>

    <select id="findEmployeeByIdAndPassword" resultType="com.changing.erpsystembackend.entity.Employee">
        SELECT * FROM EMPLOYEES
        WHERE EMPLOYEEID = #{employeeId} AND PASSWORD = #{password}
    </select>

    <select id="findAll" resultType="com.changing.erpsystembackend.entity.Employee">
        SELECT * FROM EMPLOYEES
    </select>

    <delete id="deleteEmployeeById">
        DELETE FROM EMPLOYEES
        WHERE EMPLOYEEID = #{employeeId}
    </delete>

    <update id="updateEmployee" parameterType="com.changing.erpsystembackend.entity.Employee">
        UPDATE EMPLOYEES
        SET
            PASSWORD = #{password},
            DEPARTMENT = #{department},
            POSITION = #{position},
            STARTDATE = #{startDate},
            NAME = #{name},
            TEL = #{tel},
            EMAIL = #{email},
            GENDER = #{gender},
            BIRTHDAY = #{birthday},
            BIRTHPLACE = #{birthplace},
            NATIONALITY = #{nationality},
            IDCARDNUMBER = #{idCardNumber},
            POLITICALSTATUS = #{politicalStatus},
            CV = #{cv}
        WHERE EMPLOYEEID = #{employeeId}
    </update>

</mapper>
